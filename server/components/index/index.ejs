<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Image Sharer</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/app/assets/css/master.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

    <script src="https://unpkg.com/masonry-layout@4.1/dist/masonry.pkgd.min.js"></script>
    <script src="https://npmcdn.com/imagesloaded@4.1/imagesloaded.pkgd.min.js"></script>
    
    <script src="/app/app.module.js"></script>
    <script src="/app/app.routes.js"></script>
    <script src="/app/shared/auth/authService.js"></script>
    <script src="/app/shared/user/userService.js"></script>
    <script src="/app/shared/image/imageService.js"></script>
    <script src="/app/shared/navbar/navController.js"></script>
    <script src="/app/shared/auth/authController.js"></script>
    <script src="/app/components/home/homeController.js"></script>
    <script src="/app/components/profile/profileController.js"></script>
    <script src="/app/components/myImages/myImagesController.js"></script>
    <script src="/app/shared/masonry/masonryDirective.js"></script>
  </head>

  <body ng-app="imageSharer">
    <div class="container-fluid">
      <div class="row" id="topBar">
        <div class="col-sm-5">
              <h1 class="title" id="mainTitle"><i class="fa fa-camera"></i> Image Sharer</h1>
        </div>
        <div class="col-sm-7">
          <nav class="navbar navbar-right"  ng-controller="NavCtrl">
          <ul class="nav navbar-nav">
            <li ng-show="isLoggedIn()"><a href="/#/user/{{currentUser()}}"><span class="glyphicon glyphicon-user"></span> {{ currentUser() }}</a></li>
            <li ng-show="isLoggedIn()"><a href="/#/home"><i class="fa fa-home"></i> Home</a></li>
            <li ng-show="isLoggedIn()"><a href="/#/images/{{currentUser()}}"><i class="fa fa-camera"></i> My Images</a></li>
            <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/login"><span class="glyphicon glyphicon-user"></span> Log In</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/register"><span class="glyphicon glyphicon-cog"></span> Register</a></li>
          </ul>
        </nav>
        </div>
      </div>
      
      

      <div class="row">
        <div class="col-md-12">
          
          <ui-view></ui-view>
        </div>
      </div>
  
    </div>
    <div id="footer">
     
     
    </div>
  </body>
</html>
